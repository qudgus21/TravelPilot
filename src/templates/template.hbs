<article class="post">
  <section class="city-image">
    <img src="{{cityImageUrl}}" alt="{{cityName}} 대표 이미지" />
  </section>

  <section class="city-intro">
    <p>{{cityIntro}}</p>
  </section>

  {{#each ResultHotelsData}}
    <section class="hotel-card">
      <h2 class="hotel-name">{{hotelName}}</h2>

      <div class="main-image">
        <a href="{{affiliateTextLink}}" target="_blank">
          <img src="{{imageURL}}" alt="{{hotelName}} 대표 이미지" />
        </a>
      </div>

      <div class="hotel-description">
        <p>{{generatedDescription}}</p>
      </div>

      <div class="amenities">
        <h3>주요 편의시설</h3>
        <ul>
          {{#each amenities}}
            <li>{{this}}</li>
          {{/each}}
        </ul>
      </div>

      <div class="additional-images">
        <h3>호텔 사진 미리보기</h3>
        <div class="tiles">
          {{#each tiles}}
            <a href="{{this}}" target="_blank">
              <div class="tile-thumb">
                <img src="{{this}}" alt="추가 이미지" />
              </div>
            </a>
          {{/each}}
        </div>
      </div>

      <div class="hotel-link">
        <a
          href="{{affiliateTextLink}}"
          class="details-button"
          target="_blank"
        >자세히 보기</a>
      </div>
    </section>
  {{/each}}
</article>

<style>
